<div class="e-heading">
  <h1>Editing Book</h1>
</div>

  <div id="n-error">
    <h4>
      <% if @book.errors.any? %>
       <%= @book.errors.count %> errors prohibited this book from being saved:
    </h4>
    <h5>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </h5>
    <% end %>
  </div>

<%= form_with model: @book do |f| %>
<div class="e-field">
  <div class="e-field1">
    <div>Title</div>
      <%= f.text_field :title %>
  </div>
  <div class="e-field2">
    <div>Body</div>
      <%= f.text_area :body %>
  </div>
  <div class="e-field3">
    <div>
      <%= f.submit 'Update Book' %>
    </div>
  </div>

  <div class="redirect">
    <div class="e-slink"><%= link_to "Show", book_path(@book.id) %></div>
    <div class="e-border">|</div>
    <div class="e-blink"><%= link_to "Back", '/books' %></div>
  </div>
<% end %>
</div>