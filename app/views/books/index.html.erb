<div class="i-notice">
  <%= flash[:notice] %>
</div>

<body>
<div class="i-heading">
  <h1>Books</h1>
</div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %><td>
      <td><%= link_to "Edit", edit_book_path(book.id) %><td>
      <td><%= link_to "Destroy", book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %><td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: @book do |f| %>
  <div class="new">
    <h2>New book</h2>
  </div>

<div id="n-error">
  <h4>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
  </h4>

  <h5>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </h5>
  <% end %>
</div>


<div class="n-field">
  <div class="n-field1">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="n-field2">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <h4>
    <%= f.submit 'Create Book' %>
  </h4>
</div>
<% end %>

</body>
